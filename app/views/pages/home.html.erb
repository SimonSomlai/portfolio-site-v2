  <!--  HEAD SECTION  -->
  <% content_for :title, "TrueTech | Webdesign Mechelen & Antwerpen" %>
  <% content_for :description, "Welkom bij TrueTech - Wij zijn een creatief webdesign bedrijf uit regio Mechelen en bieden zaakvoerders weboplossingen op maat aan om meer klanten te genereren" %>
    <section id="about">
        <header>
            <nav class="effect nav-collapse">
                <ul id="menu">
                    <li><%= link_to (t "home.nav.about"), about_path, :class => "about" %></li>
                    <li><a class="effect services" href="#services"><%= t "home.nav.services" %></a></li>
                    <li><a class="effect work" href="#work"><%= t "home.nav.work" %></a></li>
                    <li><a class="effect contact" href="#contact"><%= t "home.nav.contact" %></a></li>
                </ul>
            </nav>
        </header>
        <div class="slider">
            <ul>
                <li><img alt="TrueTech Webdesign Mechelen Slide1" src="<%= asset_path('design1.jpg') %>" alt=""></li>
                <li><img alt="TrueTech Webdesign Mechelen Slide2" src="<%= asset_path('design2.jpg') %>" alt=""></li>
                <li><img alt="TrueTech Webdesign Mechelen Slide3" src="<%= asset_path('design3.jpg') %>" alt=""></li>
                <li><img alt="TrueTech Webdesign Mechelen Slide4" src="<%= asset_path('design4.jpg') %>" alt=""></li>
                <li><img alt="TrueTech Webdesign Mechelen Slide5" src="<%= asset_path('design5.jpg') %>" alt=""></li>
            </ul>
        </div>
        <div class="heading">
            <h1>TrueTech</h1>
            <h3><%= t "home.heading.description"%><span class="vowel"><%= t "home.heading.vowel" %></span> <span class="options"><%= t "home.heading.key" %></span> website?</h3>
            <hr class="dividertop" />
            <a href="#"><img alt="TrueTech Webdesign Mechelen Down" src="<%= asset_path('downarrow.png') %>" height="135" width="135" alt="" class="downarrow"></a>
        </div>
    </section>

    <!--  SERVICES SECTION -->
    <section id="services">
        <h2 class="leftfade">
			<%= t "home.services.title"%>
		</h2>
        <div class="services bob fade">
            <img alt="TrueTech Webdesign Mechelen - Landing Pages" src="<%= asset_path('land.png') %>" height="110" width="110" alt="">
            <h4><%= t "home.services.service1"%></h4>
            <p><%= t "home.services.description1"%></p>
            <br/>
             <p><%= link_to(t("services.learn"), "landing-page" , :class => "small") %></p>    
        </div>
        <div class="services bob fade">
            <img alt="TrueTech Webdesign Mechelen - Custom Websites" src="<%= asset_path('app.png') %>" height="110" width="110" alt="">
            <h4><%= t "home.services.service2"%></h4>
            <p><%= t "home.services.description2"%></p>
            <br/>
             <p><%= link_to(t("services.learn"), "website" , :class => "small") %></p>    
        </div>
        <div class="services bob fade">
            <img alt="TrueTech Webdesign Mechelen - PSD To Html" src="<%= asset_path('page.png') %>" height="110" width="110" alt="">
            <h4><%= t "home.services.service3"%></h4>
            <p><%= t "home.services.description3"%></p>
            <br/>
             <p><%= link_to(t("services.learn"), "conversion" , :class => "small") %></p>    
        </div>
        <div class="services bob fade">
            <img alt="TrueTech Webdesign Mechelen - Personal Service" src="<%= asset_path('service.png') %>" height="110" width="110" alt="">
           <h4><%= t "home.services.service4"%></h4>
            <p><%= t "home.services.description4"%></p>
        </div>
        <a class="button rightfade down" href=""><%= t "home.services.button"%></a>
    </section>

    <!--  WORK SECTION -->
    <section id="work" class="cf">
		<h2 class="leftfade">
			<%= t "home.work.title"%>
        </h2>
        <% @projects.each do |project| %>
            <div class="projects fade">
            <%= link_to direct_path(project) do %>
            <img alt="TrueTech Webdesign Mechelen - <%= project.title %>" src="<%= image_path(project.image1.url :large)%>"/>
            <% end %>
            <%= link_to direct_path(project) do %>
                <div class="hover">
                    <h5><%= project.title %></h5>
                    <h6><%= project.subtitle %></h6>
                </div>
            <% end %>
            </div>
        <% end %>
       
        <%= link_to (t "home.work.button"), projects_path, :class => 'button' %>
    </section>

    <!--  REVIEWS SECTION -->
	<section id="reviews">
	    	<h2 class="leftfade">
			  <%= t "home.reviews.title"%>
			</h2>
	    <div class="reviewslider">
	        <ul class="reviewslist">
            <% @reviews.each do |review|  %>
                 <li><%= image_tag(review.bio.url :large) %>
                <p>
                <% if I18n.locale == :nl %>
                <%= review.quote %>
                <% elsif I18n.locale == :en %>
                <%= review.enquote %>
                <% end %>
                <span> - <%= review.name %></span></p></li>
            <% end -%>
	        </ul>
	    </div>
	</section>